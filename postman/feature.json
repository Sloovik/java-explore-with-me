								"exec": [
									"const main = async () => {",
									"    const api = new API(pm);",
									"    const utils = new UTILS();",
									"",
									"    try {",
									"        const user = await api.addUser(utils.getUser());",
									"        pm.collectionVariables.set(\"userId\", user.id);",
									"",
									"        const category = await api.addCategory(utils.getCategory());",
